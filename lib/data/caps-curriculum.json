    "curriculum": {
        "grade7": {
            "term1": {
                "topics": [
                    {
                        "name": "The Economy",
                        "learningObjective": "Understand basic economic concepts and the role of different economic participants in the South African economy",
                        "concepts": [
                            "economy",
                            "economic participants",
                            "households",
                            "businesses",
                            "government",
                            "foreign sector",
                            "economic activities",
                            "goods and services"
                        ],
                        "duration": "3 weeks",
                        "description": "Introduction to the basic structure and participants of the South African economy"
                    },
                    {
                        "name": "Needs and Wants",
                        "learningObjective": "Distinguish between needs and wants and understand the concept of scarcity and choice",
                        "concepts": [
                            "needs",
                            "wants",
                            "scarcity",
                            "choice",
                            "opportunity cost",
                            "limited resources",
                            "unlimited wants",
                            "basic needs"
                        ],
                        "duration": "2 weeks",
                        "description": "Understanding fundamental economic concepts of needs, wants, and resource allocation"
                    },
                    {
                        "name": "Circular Flow",
                        "learningObjective": "Explain the circular flow of goods, services, and money in a simple economy",
                        "concepts": [
                            "circular flow model",
                            "households",
                            "firms",
                            "real flow",
                            "money flow",
                            "factor market",
                            "product market",
                            "income",
                            "expenditure"
                        ],
                        "duration": "3 weeks",
                        "description": "Understanding how goods, services, and money flow between economic participants"
                    },
                    {
                        "name": "Markets",
                        "learningObjective": "Understand different types of markets and how buying and selling takes place",
                        "concepts": [
                            "markets",
                            "buyers",
                            "sellers",
                            "local markets",
                            "regional markets",
                            "national markets",
                            "formal markets",
                            "informal markets",
                            "spaza shops",
                            "street vendors"
                        ],
                        "duration": "2 weeks",
                        "description": "Exploring different types of markets in the South African context"
                    }
                ]
            }
        },
        "grade8": {
            "term1": {
                "topics": [
                    {
                        "name": "Production",
                        "learningObjective": "Understand the factors of production and how goods and services are produced in South Africa",
                        "concepts": [
                            "production",
                            "factors of production",
                            "land",
                            "labour",
                            "capital",
                            "entrepreneurship",
                            "natural resources",
                            "human resources",
                            "capital goods",
                            "productivity",
                            "manufacturing",
                            "agriculture"
                        ],
                        "duration": "3 weeks",
                        "description": "Exploring how goods and services are produced using various factors of production"
                    },
                    {
                        "name": "Forms of Ownership",
                        "learningObjective": "Identify and compare different forms of business ownership in the South African context",
                        "concepts": [
                            "sole proprietorship",
                            "partnership",
                            "private company",
                            "public company",
                            "close corporation",
                            "cooperative",
                            "state-owned enterprise",
                            "black economic empowerment",
                            "small business",
                            "medium enterprise",
                            "SMME",
                            "franchise"
                        ],
                        "duration": "3 weeks",
                        "description": "Understanding different business structures and ownership models in South Africa"
                    },
                    {
                        "name": "Labour",
                        "learningObjective": "Understand labour as a factor of production and workers rights in South Africa",
                        "concepts": [
                            "labour",
                            "workforce",
                            "employment",
                            "unemployment",
                            "skilled labour",
                            "unskilled labour",
                            "semi-skilled labour",
