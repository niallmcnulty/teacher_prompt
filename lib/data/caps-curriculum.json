                    },
                    {
                        "name": "Entrepreneurship",
                        "learningObjective": "Understand entrepreneurship and its role in economic development and job creation in South Africa",
                        "concepts": [
                            "entrepreneurship",
                            "entrepreneur",
                            "innovation",
                            "creativity",
                            "opportunity recognition",
                            "risk taking",
                            "job creation",
                            "economic development",
                            "small business",
                            "startup",
